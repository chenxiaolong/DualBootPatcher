<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_header_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nav_header_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nav_header_app_version"
        android:layout_marginStart="@dimen/nav_header_margin_start"
        android:gravity="start"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/nav_header_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nav_header_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nav_header_app_name"
        android:layout_marginBottom="@dimen/nav_header_margin_bottom"
        android:gravity="start"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/nav_header_text_size" />

</RelativeLayout>